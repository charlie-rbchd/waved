{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build (app)",
            "group": "build",
            "command": "cargo",
            "args": [
                "build",
                "--features", "'live-reload'"
            ],
            "problemMatcher": [ "$rustc" ]
        },
        {
            "type": "shell",
            "label": "Build (waved-core)",
            "group": "build",
            "command": "cargo",
            "options": {
                "cwd": "${workspaceFolder}/waved-core"
            },
            "linux": {
                "args": [
                    "build",
                    "&&", "mv", "-f", "target/debug/libwaved_core.so", "../target/debug/libwaved_core.so"
                ]
            },
            "osx": {
                "args": [
                    "build",
                    "&&", "mv", "-f", "target/debug/libwaved_core.dylib", "../target/debug/libwaved_core.dylib",
                    "&&", "install_name_tool", "-id", "${workspaceFolder}/target/debug/libwaved_core.dylib", "target/debug/libwaved_core.dylib"
                ]
            },
            "windows": {
                "args": [
                    "build",
                    "&&", "mv", "-f", "target/debug/waved_core.dll", "../target/debug/waved_core.dll"
                ]
            },
            "problemMatcher": [ "$rustc" ]
        },
        {
            "type": "shell",
            "label": "Watch (waved-core)",
            "group": "build",
            "command": "cargo",
            "options": {
                "cwd": "${workspaceFolder}/waved-core"
            },
            "args": [
                "watch",
                "-w", "src",
                "-x", "build",
                "-s", "'touch .trigger-watch'"
            ],
            "problemMatcher": [ "$rustc" ],
            "isBackground": true
        },
        {
            "type": "shell",
            "label": "Reload (waved-core)",
            "group": "build",
            "command": "cargo",
            "options": {
                "cwd": "${workspaceFolder}/waved-core"
            },
            "linux": {
                "args": [
                    "watch",
                    "--no-gitignore",
                    "-w", ".trigger-watch",
                    "-s", "'mv -f target/debug/libwaved_core.so ../target/debug/libwaved_core.so'"
                ]
            },
            "osx": {
                "args": [
                    "watch",
                    "--no-gitignore",
                    "-w", ".trigger-watch",
                    "-s", "'mv -f target/debug/libwaved_core.dylib ../target/debug/libwaved_core.dylib && install_name_tool -id ${workspaceFolder}/target/debug/libwaved_core.dylib target/debug/libwaved_core.dylib'"
                ]
            },
            "windows": {
                "args": [
                    "watch",
                    "--no-gitignore",
                    "-w", ".trigger-watch",
                    "-s", "'mv -f target/debug/waved_core.dll ../target/debug/waved_core.dll'"
                ]
            },
            "problemMatcher": [],
            "isBackground": true
        },
        {
            "type": "shell",
            "label": "Run (live-reload)",
            "command": "cargo",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "run",
                "--features", "'live-reload'"
            ],
            "problemMatcher": [],
        }
    ]
}